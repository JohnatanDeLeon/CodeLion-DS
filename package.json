{
  "name": "@johnatandeleon/design-system",
  "version": "1.0.12",
  "description": "🦁 CodeLion DS - Powerful React Design System with TypeScript, vanilla-extract, and WCAG 2.1 AA accessibility",
  "license": "MIT",
  "author": "CodeLion Team",
  "homepage": "https://github.com/JohnatanDeLeon/CodeLion-DS#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/JohnatanDeLeon/CodeLion-DS.git"
  },
  "bugs": {
    "url": "https://github.com/JohnatanDeLeon/CodeLion-DS/issues"
  },
  "keywords": [
    "react",
    "typescript",
    "design-system",
    "vanilla-extract",
    "css-in-js",
    "accessibility",
    "wcag",
    "components",
    "ui-library",
    "design-tokens",
    "storybook"
  ],
  "private": false,
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles.js",
    "./reset": "./dist/reset.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css",
    "**/*.css.ts"
  ],
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "tsup",
    "build-storybook": "storybook build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.27.1",
    "@storybook/addon-a11y": "^9.1.0",
    "@storybook/addon-docs": "^9.1.0",
    "@storybook/addon-links": "^9.1.0",
    "@storybook/react-vite": "^9.1.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20.12.7",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vanilla-extract/css": "^1.15.1",
    "@vanilla-extract/esbuild-plugin": "^2.3.18",
    "@vanilla-extract/recipes": "^0.5.2",
    "@vanilla-extract/vite-plugin": "^4.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.5.0",
    "@vitest/ui": "^1.5.0",
    "axe-core": "^4.9.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^9.1.0",
    "jest-axe": "^10.0.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "storybook": "^9.1.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vitest": "^1.5.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}
